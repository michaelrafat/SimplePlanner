<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.android.michael.simpleplanner">

    <application
        android:allowBackup="true"
        android:icon="@drawable/plan_icon"
        android:label="@string/app_name"
        android:roundIcon="@drawable/plan_icon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name="com.android.michael.simpleplanner.SecondActivity"
            android:label="Simple Planner (Second Activity)"
            android:windowSoftInputMode="stateHidden|adjustResize">
        </activity>

        <activity
            android:name="com.android.michael.simpleplanner.MainActivity"
            android:label="Simple Planner">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <receiver
            android:name="com.android.michael.simpleplanner.NotificationReceiver"
            android:enabled="true"
            android:exported="false">
        </receiver>

    </application>

</manifest>